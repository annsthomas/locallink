<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NortheasternSSO">

    <TextView
        android:id="@+id/northeastern_sso_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Northeastern University"
        android:textColor="#E42525"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/northeastern_sso_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Enter Email"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/northeastern_sso_title"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_title" />

    <EditText
        android:id="@+id/northeastern_sso_email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="14"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/northeastern_sso_email_title"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_email_title" />

    <TextView
        android:id="@+id/northeastern_sso_password_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Enter Password"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/northeastern_sso_email_text"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_email_text" />

    <EditText
        android:id="@+id/northeastern_sso_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="14"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/northeastern_sso_password_title"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_password_title" />

    <TextView
        android:id="@+id/northeastern_sso_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:text="@string/password_hyperlink"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/northeastern_sso_password_title"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_password_text"
        android:focusable="true" />

    <Button
        android:id="@+id/northeastern_sso_signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="240dp"
        android:text="Sign in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/northeastern_sso_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:paddingHorizontal="20dp"
        android:text="Please sign in using your Northeastern username@northeastern.edu and password"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_signin_button" />

    <TextView
        android:id="@+id/northeastern_sso_tech_service_hyperlink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:text="@string/tech_service_portal"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/northeastern_sso_instructions" />


</androidx.constraintlayout.widget.ConstraintLayout>